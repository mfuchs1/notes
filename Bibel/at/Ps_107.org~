^{[[#fnm23][23]]} ℘ Jes 41,18

^{[[#fnm24][24]]} ℘ Ez 36,35

^{[[#fnm25][25]]} ℘ Jes 65,21

^{[[#fnm26][26]]} ℘ Dtn 7,13f

^{[[#fnm27][27]]} ℘ Ijob 12,21.24

^{[[#fnm28][28]]} ℘ 113,7

^{[[#fnm29][29]]} ℘ Ijob 22,19; 5,16; Ps 63,12
