^{[[#fnm10][10]]} ℘ 6,7; 15,1

^{[[#fnm11][11]]} ℘ Ps 9,9; 11,7

^{[[#fnm12][12]]} ℘ 11,24; 15,1

^{[[#fnm13][13]]} ℘ 11,23

^{[[#fnm14][14]]} ℘ 1,6; 12,2

^{[[#fnm15][15]]} ℘ 12,10

^{[[#fnm16][16]]} ℘ 12,18; 11,9f; Gen 15,18; Dtn 7,8

^{[[#fnm17][17]]} ℘ 11,15

^{[[#fnm18][18]]} ℘ 15,14

